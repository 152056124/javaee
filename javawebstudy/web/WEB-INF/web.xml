<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>selectStudent</servlet-name>
        <servlet-class>com.ztc.servlet.SelectStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>selectStudent</servlet-name>
        <url-pattern>/select</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteStudent</servlet-name>
        <servlet-class>com.ztc.servlet.DeleteStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteStudent</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>insertStudent</servlet-name>
        <servlet-class>com.ztc.servlet.InsertStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>insertStudent</servlet-name>
        <url-pattern>/insert</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updateStudent</servlet-name>
        <servlet-class>com.ztc.servlet.UpdateStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateStudent</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>selectToUpdate</servlet-name>
        <servlet-class>com.ztc.servlet.SelectToUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>selectToUpdate</servlet-name>
        <url-pattern>/stou</url-pattern>
    </servlet-mapping>
</web-app>